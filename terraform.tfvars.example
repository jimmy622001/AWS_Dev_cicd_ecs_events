# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

aws_region   = "eu-west-1"
vpc_cidr     = "10.0.0.0/16"
environment  = "learning"
project_name = "aws-learning"

# Security Configuration
rancher_bootstrap_password = "ChangeMe123!"
grafana_admin_password     = "ChangeMe123!"
rds_master_password        = "ChangeMe123!"

# Network Configuration
customer_gateway_ip = "203.0.113.12"  # Replace with your public IP
onpremises_cidr    = "192.168.1.0/24" # Replace with your on-premises network

# EKS Configuration
eks_version = "1.32"
eks_node_instance_types = ["t3.medium"]
eks_node_desired_size = 2
eks_node_max_size = 4
eks_node_min_size = 1